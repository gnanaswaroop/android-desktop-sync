<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >
<TextView
    android:id="@+id/IPAddressLabel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Enter an Host Name or IP address"
    />
<EditText
    android:id="@+id/IPAddressInputField"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/StartSyncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Sync" />

    <Button
        android:id="@+id/ExitSyncClientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Sync Client" />

</LinearLayout>   
    
<ScrollView
    android:id="@+id/SCROLLER_ID"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:fillViewport="true">
	<TextView
	    android:id="@+id/Console"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Console"
	    android:maxLines = "10000"
	    android:scrollbars = "vertical"
	    />
</ScrollView>
</LinearLayout>